{
  "name": "pishilogger",
  "version": "2.7.1",
  "description": "generate automated changelog simply, a fork of `https://github.com/saman-taghavi/pishiLogger`",
  "repository": "saman-taghavi/pishiLogger",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "pishilogger": "./dist/cli.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "pishilogger": "jiti ./src/cli.ts",
    "dev": "vitest dev",
    "lint": "eslint . && prettier -c src test",
    "lint:fix": "eslint --fix . && prettier -w src test",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm pishilogger --release --push && pnpm publish",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "c12": "^2.0.4",
    "colorette": "^2.0.20",
    "consola": "^3.4.0",
    "convert-gitmoji": "^0.1.5",
    "mri": "^1.2.0",
    "node-fetch-native": "^1.6.6",
    "ofetch": "^1.4.1",
    "open": "^10.1.0",
    "pathe": "^1.1.2",
    "pkg-types": "^1.3.1",
    "scule": "^1.3.0",
    "semver": "^7.7.1",
    "std-env": "^3.8.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^3.0.7",
    "eslint": "^9.21.0",
    "eslint-config-unjs": "^0.4.2",
    "jiti": "^2.4.2",
    "prettier": "^3.5.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vitest": "^3.0.7"
  },
  "packageManager": "pnpm@10.5.0"
}
